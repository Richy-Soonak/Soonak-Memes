{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "lib": ["es2015"],
  "include": [
    "src/**/*.ts",
    "src/routes/api/metadata.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
